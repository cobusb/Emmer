#!/bin/bash

# Emmer Static Site Generator Build Script

set -e

# Default values
SOURCE_DIR=${1:-"content"}
OUTPUT_DIR=${2:-"dist"}
TEMPLATES_DIR=${3:-"templates"}
ASSETS_DIR=${4:-"assets"}
VERBOSE=${5:-"false"}

echo "ğŸ—ï¸  Building Emmer static site..."

# Check if Node.js and npm are available for CSS building
if command -v npm &> /dev/null; then
    echo "ğŸ“¦ Installing/updating Node.js dependencies..."
    npm install --silent

    echo "ğŸ¨ Building CSS..."
    npm run build:css:prod
else
    echo "âš ï¸  Node.js not found. Skipping CSS build."
    echo "   Install Node.js to enable automatic CSS generation."
fi

# Build the site
echo "ğŸ“„ Building site from $SOURCE_DIR to $OUTPUT_DIR..."

mix run -e '
SiteEmmer.main([
  "--source-dir", System.get_env("SOURCE_DIR") || "content",
  "--output-dir", System.get_env("OUTPUT_DIR") || "dist",
  "--templates-dir", System.get_env("TEMPLATES_DIR") || "templates",
  "--assets-dir", System.get_env("ASSETS_DIR") || "assets"
] ++ (if System.get_env("VERBOSE") == "true", do: ["--verbose"], else: []))
'

echo "âœ… Site built successfully!"
echo "ğŸ“ Output directory: $OUTPUT_DIR"
echo "ğŸŒ Open $OUTPUT_DIR/index.html in your browser to view the site"
